<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Piano_Key.Resource">
    <Storyboard x:Key="whitekeycolor_animation">
        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="Foregournd" Storyboard.TargetName="txt">
            <EasingColorKeyFrame KeyTime="0" Value="White"/>
            <EasingColorKeyFrame KeyTime="0:0:4" Value="Black"/>
        </ColorAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="MenuSize_animation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(LayoutTransform).(ScaleTransform.ScaleX)" AutoReverse="True">
            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.5"/>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(LayoutTransform).(ScaleTransform.ScaleY)" AutoReverse="True">
            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.5"/>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
</ResourceDictionary>